{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@tonice/deer-ui": ["src/index.ts"],
      "@tonice/deer-ui/es/*": ["src/*"],
      "@tonice/deer-ui/lib/*": ["src/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib", "es", "esm", "tests", "gulpfile.ts"]
}
